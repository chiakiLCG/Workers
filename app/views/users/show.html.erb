<!-- fontawesome -->
<script src="https://kit.fontawesome.com/af75622bf0.js" crossorigin="anonymous"></script>

<title>詳細 | Workers</title>
<body class="text-center bg-light">
  <form class="mx-auto col-lg-9 rounded bg-white form-time-table" action="index.erb">
      <h1 class="h3 my-3">月別リスト</h1>

        <%= link_to 'Logout', logout_path, method: :delete %>

    <select class="form-select rounded-pill mb-3" aria-label="Default select example">
      <option>2021/01</option>
      <option>2021/02</option>
      <option>2021/03</option>
      <option>2021/04</option>
      <option>2021/05</option>
      <option>2021/06</option>
      <option>2021/07</option>
      <option>2021/08</option>
      <option>2021/09</option>
      <option>2021/10</option>
      <option>2021/11</option>
      <option>2021/12</option>
    </select>

    <div class="card text-start my-4" style="width: auto;">
      <div class="card-header">
        実働日数
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">An item</li>
      </ul>
    </div>

    <div class="card text-start my-4" style="width: auto;">
      <div class="card-header">
        残業時間
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">An item</li>
      </ul>
    </div>

    <div class="card text-start my-4" style="width: auto;">
      <div class="card-header">
        残有給休暇
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">An item</li>
      </ul>
    </div>


    <table class="table table-bordered">
      <thead>
        <tr class="bg-light">
          <th scope="col">日</th>
          <th scope="col">出勤</th>
          <th scope="col">退勤</th>
          <th scope="col">休憩</th>
          <th scope="col">業務内容</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1（月）</th>
          <td>09:00</td>
          <td>18:00</td>
          <td>01:00</td>
          <td>テキストテキストテキストテキストテキストテキス....</td>
          <td><button type="button" class="btn btn-default h-auto py-0" data-toggle="modal" data-target="#inputAttendanceModal"> <i class="fas fa-pencil-alt"></i></button></td>
        </tr>
      </tbody>
    </table>
  </form>
</body>

<!-- Modal -->
<div class="modal fade" id="inputAttendanceModal" tabindex="-1" aria-labelledby="inputAttendanceModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inputAttendanceModalLabel">日報登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="alert alert-primary" role="alert">
          11/1（月）
          </div>
          <div class="row">
            <div class="col-sm">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="出勤">
                <button class="button" class="input-group-text" id="start_btn">打刻</button>
              </div>
            </div>
            <div class="col-sm">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="退勤">
                <button class="button" class="input-group-text" id="end_btn">打刻</button>
              </div>
            </div>
            <div class="col-sm">
              <input type="text" class="form-control" placeholder="休憩">
            </div>
          </div>
          <div class="mb-3 pt-3">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="業務内容"></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary text-white rounded-pill px-5">登録</button>
      </div>
    </div>
  </div>
</div>

