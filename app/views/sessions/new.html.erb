<title>ログイン | Workers</title>
<div>
  <img class="mb-4" src="/img/Workers-logo.png" width="80" height="90">
</div>

<body class="text-center bg-light">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="col-sm-6 offset-sm-3 border rounded bg-white form-login">
      <h1 class="h3 my-3">Login</h1>
        <div class="form-group pt-3">
          <%= f.text_field :user_id, class: 'form-control rounded-pill', placeholder: '社員ID' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control rounded-pill', placeholder: 'パスワード' %>
        </div>
        <%= f.submit 'ログイン', class: 'btn btn-primary rounded-pill px-5 my-3' %>
    </div>
  <% end %>
</body>
