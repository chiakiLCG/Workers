
<!-- Original CSS -->
<link href="/stylesheets/style.css" rel="stylesheet">

<title>ログイン | Works</title>
<body class="text-center bg-light">

  <div>
    <img class="mb-4" src="/img/Works-logo.png" width="80" height="100">
  </div>

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
     <form class="border rounded bg-white form-login" >
        <h1 class="h3 my-3">Login</h1>
      <div class="mb-3 pt-3">
        <%= f.label :user_no, placeholder='社員番号' %>
        <%= f.text_field :user_no, class: 'form-control rounded-pill' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, placeholder='パスワード' %>
        <%= f.password_field :password, class: 'form-control rounded-pill' %>
      </div>

      <%= f.submit 'ログイン', class: "btn btn-info text-white rounded-pill px-5 my-4" %>
     </form>
    <% end %>
</body>  
